<h1>Sign in</h1>

<% if !notice.nil? %>
	<p id="notice" class="alert alert-error"><%= notice %></p>
<% end %>

<%= form_for(:session, url: sessions_path) do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %><br />

  <%= f.label :password %>
  <%= f.password_field :password %><br />

  <%= f.submit "Sign in" %>
<% end %>

<p>New user? <%= link_to "Sign up now!", new_user_path %></p>
