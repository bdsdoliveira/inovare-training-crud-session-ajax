<h1>Items</h1>

<table class="table table-bordered table-striped">
  <tr>
    <th>ID</th>
    <th>Order ID</th>
    <th>Product</th>
    <th>Price</th>
    <th>Amount</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td><%= item.order_id %></td>
    <td>(<%= item.product_id %>) <%= Product.find(item.product_id).name %></td>
    <td><%= item.price %></td>
    <td><%= item.amount %></td>
  </tr>
<% end %>
</table>
